@model Demo.ViewModels.AssignRoleViewModel

@{
    ViewData["Title"] = "AssignRole";
}

<h1>AssignRole</h1>

<h4>AssignRoleViewModel</h4>
<hr />

<h3>@ViewBag.RoleExist</h3>
<h3>@ViewBag.RoleAdded</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRole">
            <div asp-validation-summary="All" class="text-danger"></div>
